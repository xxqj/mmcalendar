<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout android:gravity="center"
        android:background="@color/app_headcolor"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/segment_img"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@color/app_headcolor"
        android:checkedButton="@+id/rbfree"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbTool1"
            style="@style/tab_radio_style"
            android:layout_weight="1"
            android:background="@drawable/tab_tadio_left"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="育儿电影"
            android:textColor="@color/font_color_status"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioButton
            android:id="@+id/rbTool2"
            style="@style/tab_radio_style"
            android:layout_weight="1"
            android:background="@drawable/tab_tadio_right"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="生活电影"
            android:textColor="@color/font_color_status"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RadioGroup>
        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>