<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical" >
    <LinearLayout android:gravity="center"
        android:background="@color/app_headcolor"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/segment_img"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@color/app_headcolor"
        android:checkedButton="@+id/rbfree"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbTool1"
            style="@style/tab_radio_style"
            android:layout_weight="1"
            android:background="@drawable/tab_tadio_left"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:text="安全期"
            android:checked="true"
            android:textColor="@color/font_color_status"
            android:padding="8dp"

            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioButton
            android:id="@+id/rbcontact"
            style="@style/tab_radio_style"
            android:layout_weight="1"
            android:background="@drawable/tab_tadio_middle"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:padding="8dp"
            android:visibility="gone"
            android:text="其他工具"
            android:textColor="@color/font_color_status"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioButton
            android:id="@+id/rbTool2"
            style="@style/tab_radio_style"
            android:layout_weight="1"
            android:background="@drawable/tab_tadio_right"
            android:minHeight="33dip"
            android:minWidth="40dip"
            android:padding="8dp"
            android:text="预产期"
            android:textColor="@color/font_color_status"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RadioGroup>
        </LinearLayout>
    <com.mm.mmcalendar.common.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.mm.mmcalendar.common.widget.NoScrollViewPager>
</LinearLayout>
